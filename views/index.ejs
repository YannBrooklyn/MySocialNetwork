<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Groupomania</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Lato&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/main.css">
    
    
</head>
<body>
    <header>
        <div class="navBar">
            <div class="navLeft">
                <a href=""><img src="images/logo.jpg" alt=""></a>
            </div>
            <div class="navRight">
                <ul>
                    <a href="/"><li>Accueil</li></a>
                    <a href="/login"><li>Connexion</li></a>
                    <a href="/user/profil"><li>Profil</li></a>
                    <a href="/register"><li>Register</li></a>
                    <a href="/logout"><li>Deconnexion</li></a>
                </ul>
            </div>
        </div>
    </header>

    <main>
        <section class="section-left">
            <div class="home-profil">
                <div class="img-profil">
                    <img src="images/man-g9f85c922a_1280.jpg" alt="">
                </div>
                <div class="text-profil">
                    <p>- Habite Ã  Mulhouse</p>
                    <p>- Age</p>
                    <p>- Fonction</p>
                    <p>- En poste depuis le</p>
                </div>
            </div>
        </section>

        <section class="section-center">
            
            <div class="post">
                <form action="/" method="post">
                    <textarea name="textpost" id="" cols="30" rows="10"></textarea>
                    <button class="sendpost">Poster</button>
                </form>
            </div>
            <div class="actualite">
                
                <% result.forEach(function (text) {%>
                    <div class="thePost" id="thePost<%= text.idPost %>"> 
                        <img class="imgUserPost" src="images/<%=text.Photoprofil%>">
                        <h2>
                            <%= text.Firstname + " " + text.Lastname %>
                        </h2>
                        <p>
                            <%= text.text %>
                        </p>
                        <h5>
                            <%= text.datePost %>
                        </h5>
                        <div class="coms">
                            <form action="/post/<%=text.idPost%>" method="post">
                                <input type="text" name="inputcomments">
                                <button type="submit">Envoyer</button>
                                <hr>
                            </form>
                            
                            <% resultcom.forEach(function(com) { %>
                                <% if (com.idPost == text.idPost) {%>
                                    <h5>
                                        <%= com.Firstname + " " + com.Lastname %>
                                    </h5>
                                    <h5>
                                        <%= com.text %>   
                                    </h5>
                                <%} %>
                            <% })%>
                        </div>
                    </div>
                <%}) %>
            </div>
        </section>

        <section class="section-right">
        </section>
    </main>

    <footer>

    </footer>

</body>
</html>
